{
    "manifest_version": 3,
    "name": "WorldQuant Scope",
    "version": "0.6.1",
    "description": "可以显示数据分析特征",
    "author": "zhangkaihua@buaa.edu.cn",
    "icons": {
        "128": "img/logo.png"
    },
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "16": "img/logo.png",
            "48": "img/logo.png",
            "128": "img/logo.png"
        }
    },
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://platform.worldquantbrain.com/*"
            ],
            "js": [
                "scripts/msgpack.min.js",
                "scripts/pako.min.js",
                "scripts/chart.js",
                "scripts/ui.js",
                "scripts/main.js"
            ],
            "css": [
                "css/idcard.css"
            ]
        },
        {
            "matches": [
                "*://support.worldquantbrain.com/hc/en-us/search*"
            ],
            "js": [
                "scripts/search.js"
            ]
        },
        {
            "matches": [
                "*://platform.worldquantbrain.com/genius/*"
            ],
            "js": [
                "scripts/genius.js"
            ],
            "css": [
                "css/genius.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "data/*.bin",
                "data/*.json"
            ],
            "matches": [
                "*://platform.worldquantbrain.com/*"
            ]
        }
    ],
    "host_permissions": [
        "https://*/*",
        "chrome-extension://*/*"
    ],
    "permissions": [
        "scripting",
        "cookies",
        "tabs",
        "storage",
        "activeTab"
    ]
}